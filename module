{
// ・モジュール (module)
module=device,device driver;

// ・デバイス （device）
  device=card,dice,drawing,table,*etc;
  
  // デバイスはカード、ダイス、図、表 等になります。

// ・デバイスドライバー （device driver）
device driver=sub rules;
　　
   sub rules->device;
   device->sub rules;
   
  // デバイスドライバーはデバイスを運用するサブルール群になります。
　
}

  
  
  
　

